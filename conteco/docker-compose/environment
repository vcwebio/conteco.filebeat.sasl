#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="filebeat.sasl"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_filebeat"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_filebeat"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_filebeat_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_FILEBEAT_ENVIRONMENT,$CONTECO_DC_FILEBEAT_COMMAND,$CONTECO_DC_FILEBEAT_PORTS,$CONTECO_DC_FILEBEAT_VOLUMES,$CONTECO_DC_FILEBEAT_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_FILEBEAT_ENVIRONMENT="\
'ES_FILEBEAT_FILEPATHS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS}',\
'ES_FILEBEAT_OUTPUT_CONSOLE=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONSOLE}',\
'ES_FILEBEAT_OUTPUT_ELASTICSEARCH=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH}',\
'ES_FILEBEAT_OUTPUT_KAFKA=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA}',\
'ES_FILEBEAT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS}',\
'ES_FILEBEAT_OUTPUT_CONFIG_ELASTICSEARCH_INDEX=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_INDEX}',\
'ES_FILEBEAT_OUTPUT_CONFIG_ELASTICSEARCH_USERNAME=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_USERNAME}',\
'ES_FILEBEAT_OUTPUT_CONFIG_ELASTICSEARCH_PASSWORD=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_PASSWORD}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KIBANA_HOST=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KIBANA_DASHBOARDS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KAFKA_HOSTS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KAFKA_USERNAME=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_USERNAME}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KAFKA_PASSWORD=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_PASSWORD}',\
'ES_FILEBEAT_OUTPUT_CONFIG_KAFKA_TOPIC=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC}'"
export CONTECO_DC_FILEBEAT_VOLUMES="'${DOLLAR}{CONTECO_STACKPREFIX}_filebeat_volume:/usr/share/filebeat/data','/etc:/hostfs/etc:ro'${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS_MAPPING}"
export CONTECO_DC_FILEBEAT_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_filebeat_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS filebeat.base
export CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS="/hostfs/var/lib/docker/containers/*/*.json"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS_MAPPING=",'/var/lib/docker/containers:/hostfs/var/lib/docker/containers:rw'"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONSOLE="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA="true"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS="elasticsearch:9200"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_INDEX="filebeat"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_USERNAME=""
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_PASSWORD=""
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST="kibana:5601"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS=""
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_USERNAME=""
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_PASSWORD=""
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC="test"
export CONTECO_DC_FILEBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_FILEBEAT_LABELS=
export CONTECO_DC_FILEBEAT_DEPLOY_LABELS=
export CONTECO_DC_FILEBEAT_DEPLOY_REPLICAS=1
export CONTECO_DC_FILEBEAT_DEPLOY_PLACEMENT_CONSTRAINTS=
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS filebeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
